<Window x:Class="Сontacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Сontacts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="280" Width="780" Margin="10"/>
        <Button x:Name="button1" Width="100" Height="40" Content="Поиск" Margin="-500,200,0,0" Click="OpenModalWindowClick"></Button>
        <Button x:Name="button2" Width="100" Height="40" Content="Поиск по номеру" Margin="-200,200,0,0" Click="OpenModalSearchNumberClick"></Button>
        <Button x:Name="button3" Width="100" Height="40" Content="Выгрузить CSV" Margin=" 100,200,0,0" Click="ExportToCSVClick"></Button>
        <Button x:Name="button4" Width="100" Height="40" Content="Улицы" Margin="400,200,0,0" Click="OpenModalWindowStreets"></Button>
    </Grid>
</Window>